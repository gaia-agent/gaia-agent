# OpenAI API Key (Required)
# Format: sk-...
OPENAI_API_KEY=

# Optional: Custom OpenAI API endpoint
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: OpenAI model name (default: gpt-4o)
# OPENAI_MODEL=gpt-4o

# Optional: Enable OpenAI reasoning mode for o1/o3 models
# Automatically enabled if OPENAI_MODEL starts with 'o1' or 'o3'
# OPENAI_REASONING_MODE=true

# Hugging Face Token (Required for GAIA benchmark)
# Get your token from: https://huggingface.co/settings/tokens
# Format: hf_...
HUGGINGFACE_TOKEN=

# ============================================================
# Provider Configuration (Optional)
# ============================================================
# Override default providers for each capability
# If not set, uses recommended defaults (see below)

# Search Provider (default: openai)
# Options: openai | tavily | exa
# Note: OpenAI search uses native web_search_preview tool (no extra API key needed)
# GAIA_AGENT_SEARCH_PROVIDER=openai

# Sandbox Provider (default: e2b)
# Options: e2b | sandock
# GAIA_AGENT_SANDBOX_PROVIDER=e2b

# Browser Provider (default: steel)
# Options: steel | browseruse | aws-bedrock-agentcore
# GAIA_AGENT_BROWSER_PROVIDER=steel

# Memory Provider (default: mem0, optional)
# Options: mem0 | agentcore
# GAIA_AGENT_MEMORY_PROVIDER=mem0

# Browser session cleanup control (default: true - auto cleanup)
# Set to "false" to preserve sessions for debugging
# BROWSER_AUTO_CLEANUP_SESSION=true

# ============================================================
# Provider API Keys
# ============================================================

# Sandbox Providers (Choose one or both)
# E2B cloud sandbox (recommended)
E2B_API_KEY=

# Sandock API (alternative)
SANDOCK_API_KEY=

# Browser Automation (Choose one)
# Steel browser automation (recommended - free tier available)
STEEL_API_KEY=

# Optional: Custom Steel API base URL
# STEEL_BASE_URL=

# BrowserUse SDK (alternative)
BROWSERUSE_API_KEY=

# AWS Bedrock AgentCore (alternative)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Search Providers (Choose one or more)
# OpenAI native web search (default - uses OPENAI_API_KEY, no extra cost)
# No separate API key needed - uses OPENAI_API_KEY above

# Tavily AI search (alternative)
TAVILY_API_KEY=

# Exa neural search (alternative)
EXA_API_KEY=

# Memory Providers (Optional)
# Mem0 memory service
MEM0_API_KEY=

# AWS AgentCore Memory uses AWS credentials above
